  <!-- Add this script to the end of your HTML, just before </body> -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contactForm');
    const formContainer = document.getElementById('form');

    contactForm.addEventListener('submit', function(event) {
      event.preventDefault();

      // Assuming you want a simple fade-out animation
      formContainer.style.animation = 'fadeOut 1s forwards';

      // Add a delay before showing the thank-you message
      setTimeout(function() {
        // Hide the form after the animation
        formContainer.style.display = 'none';

        // Display the thank-you message or any other content
        const thankYouMessage = document.createElement('p');
        thankYouMessage.textContent = 'Thank you for your submission!';
        formContainer.parentNode.appendChild(thankYouMessage);
      }, 1000); // Adjust the delay (in milliseconds) based on your animation duration
    });
  });
</script>

</head>
